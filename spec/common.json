{
  "definitions": {
    "Collection": {
      "description": "Base collection",
      "type": "struct",
      "properties": {
        "totalResults": {
          "type": "integer"
        },
        "startIndex": {
          "type": "integer"
        },
        "itemsPerPage": {
          "type": "integer"
        },
        "entry": {
          "type": "array",
          "schema": {
            "type": "generic",
            "name": "T"
          }
        }
      }
    },
    "Message": {
      "description": "Common error message",
      "type": "struct",
      "properties": {
        "success": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "id": {
          "type": "string"
        }
      }
    },
    "Metadata": {
      "type": "map",
      "schema": {
        "type": "string"
      }
    },
    "Form_Container": {
      "description": "Represents a config form with a list of elements",
      "type": "struct",
      "properties": {
        "element": {
          "type": "array",
          "schema": {
            "type": "reference",
            "target": "Form_Element"
          }
        }
      }
    },
    "Form_Element": {
      "description": "Form base element",
      "type": "struct",
      "base": true,
      "discriminator": "type",
      "mapping": {
        "Form_Element_Input": "http://fusio-project.org/ns/2015/form/input",
        "Form_Element_Select": "http://fusio-project.org/ns/2015/form/select",
        "Form_Element_Tag": "http://fusio-project.org/ns/2015/form/tag",
        "Form_Element_TextArea": "http://fusio-project.org/ns/2015/form/textarea"
      },
      "properties": {
        "element": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "help": {
          "type": "string"
        }
      }
    },
    "Form_Element_Input": {
      "description": "Form element which represents an input element",
      "type": "struct",
      "parent": {
        "type": "reference",
        "target": "Form_Element"
      },
      "properties": {
        "type": {
          "description": "The input type i.e. text or password, all HTML input types are allowed",
          "type": "string"
        }
      }
    },
    "Form_Element_Select": {
      "description": "Form element which represents a select element",
      "type": "struct",
      "parent": {
        "type": "reference",
        "target": "Form_Element"
      },
      "properties": {
        "options": {
          "description": "Available options for the select element",
          "type": "array",
          "schema": {
            "type": "reference",
            "target": "Form_Element_Select_Option"
          }
        }
      }
    },
    "Form_Element_Select_Option": {
      "description": "Represents a concrete option entry",
      "type": "struct",
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "Form_Element_Tag": {
      "description": "Form element which represents an input tag editor to enter comma-separated values",
      "type": "struct",
      "parent": {
        "type": "reference",
        "target": "Form_Element"
      }
    },
    "Form_Element_TextArea": {
      "description": "Form element which represents a textarea",
      "type": "struct",
      "parent": {
        "type": "reference",
        "target": "Form_Element"
      },
      "properties": {
        "mode": {
          "description": "Describes which data is provided at the textarea, this can be i.e. a programming language like php, java or python or also a data format like json",
          "type": "string"
        }
      }
    }
  }
}
